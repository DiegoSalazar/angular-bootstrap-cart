%p{:'ng-show' => 'cartEmpty()'} You have no items in your cart!

%ul.cartList{:'ng-hide' => 'cartEmpty()'}
  %li{:'ng-repeat' => 'item in cart_items', :'ng-animate' => "'animate'"}
    %p.item
      {{item.name}}
    %span.left
      x 
      %span.numPicker
        {{item.quantity}}
      %span.numControls 
        %span.up{:'ng-click' => "updateItemQty($index, 1)"} ▲
        %span.dn{:'ng-click' => "updateItemQty($index, -1)", :'ng-hide' => 'itemQtyIsOne($index)'} ▼
      = "= {{item.price * item.quantity | currency}}"
    %button.removeItem{:'ng-click' => 'removeItem($index)'} X

%p.right.cartTotal Total: {{cartTotal() | currency}}